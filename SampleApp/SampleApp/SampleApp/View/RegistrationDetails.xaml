<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.View.RegistrationDetails">
    <ContentPage.Content>
       
        <ListView
            HasUnevenRows="True"
            ItemsSource="{Binding People}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ContentView>
                            <StackLayout Padding="20">
                                <Label
                                    Text="{Binding Name}" />
                                <Label 
                                    Text="{Binding Email}" />
                                <Label
                                    Text="{Binding Mobile}" />
                                <Label 
                                    Text="{Binding Password}" />


                            </StackLayout>

                        </ContentView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
       
    </ContentPage.Content>
</ContentPage>